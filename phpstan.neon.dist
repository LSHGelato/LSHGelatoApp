parameters:
  level: 1

  # Make PHPStan aware of $router/$pdo for the routes/*
  bootstrapFiles:
    - phpstan-bootstrap.php

  # Only analyze our application code
  paths:
    - app
    - routes

  # (Optional) If you want to ignore CLI helpers under app/bin
  excludePaths:
    analyse:
      - app/bin/*

  # Keep things beginner-friendly; we can dial up later
  checkMissingIterableValueType: false
  checkGenericClassInNonGenericObjectType: false
