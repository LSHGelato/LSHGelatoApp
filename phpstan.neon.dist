parameters:
  level: 1
  bootstrapFiles:
    - phpstan-bootstrap.php

  # Only analyze our application code (skip CLI helpers etc.)
  paths:
    - app
    - routes

  excludePaths:
    - app/bin
    - enrichment_selftest.php

  # Keep things beginner-friendly for now
  checkMissingIterableValueType: false
  checkGenericClassInNonGenericObjectType: false
